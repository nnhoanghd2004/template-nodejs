<!-- @format -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head.ejs'); %>
	</head>
	<body>
		<div
			class="mx-auto mt-10 max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
		>
			<a href="#">
				<h5
					class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
				>
					Notification
				</h5>
			</a>
			<% if (noti.data == 'success') {%>
			<p class="mb-5 font-normal text-gray-700 dark:text-gray-400">
				<%=noti.action[0].toUpperCase() + noti.action.slice(1)%> post
				successfully!!!
			</p>
			<a
				href="/admin"
				class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-3 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
			>
				Back to Admin Page
			</a>
			<% } else { %>
			<p class="mb-5 font-normal text-gray-700 dark:text-gray-400">
				<%=noti.action[0].toUpperCase() + noti.action.slice(1)%> post
				failure!!!
			</p>
			<button
				onclick="history.back()"
				class="focus:outline-none text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-3 py-2.5 me-2 mb-2 dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900"
			>
				Return to <%=noti.action[0].toUpperCase() +
				noti.action.slice(1)%> Post Page
			</button>
			<% } %>
		</div>
	</body>
</html>
